@{
    ViewData["Title"] = "Identificación";
}

<style>
    body {
        background-color: black;
        color: white;
        font-family: monospace;
        padding: 30px;
    }

    h2 {
        color: orange;
    }

    label {
        display: block;
        margin-bottom: 10px;
        color: #0ff;
    }

    input[type="text"] {
        background-color: black;
        color: white;
        border: 1px solid #0ff;
        padding: 8px;
        width: 300px;
        font-family: monospace;
    }

    button {
        margin-top: 20px;
        background-color: #111;
        color: white;
        border: 1px solid white;
        padding: 10px 20px;
        cursor: pointer;
        font-family: monospace;
    }

    button:hover {
        background-color: #333;
    }

    .error {
        color: red;
        margin-top: 15px;
    }
</style>

<h2>IDENTIFICACIÓN DEL RECLUSO</h2>

<form method="post">
    <label for="nombreJugador">INGRESÁ TU NOMBRE PARA CONTINUAR:</label>
    <input type="text" name="nombreJugador" id="nombreJugador" />
    <br />
    <button type="submit">ACCEDER AL SISTEMA</button>
</form>

@if (ViewBag.Error != null)
{
    <div class="error">@ViewBag.Error</div>
}
